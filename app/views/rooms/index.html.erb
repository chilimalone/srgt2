<h2>Listing rooms</h2>

<table>
  <thead>
    <tr>
      <th>Property Address</th>
	  <th>Room Number</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
			<%= room.property.street_1 %><br />
			<%= room.property.street_2 %><br />
			<%= room.property.city %> <%= room.property.state %> <%= room.property.zip %>
		</td>
		<td><%= room.room_number %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

