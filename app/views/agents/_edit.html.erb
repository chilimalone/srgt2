<%= form_for(@agent) do |f| %>
  <% if @agent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@agent.errors.count, "error") %> prohibited this agent from being saved:</h2>

      <ul>
      <% @agent.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br />
    <%= f.label :fname, "First Name: " %>
    <%= f.text_field :fname %>
  <br />
    <%= f.label :lname, "Last Name:" %>
    <%= f.text_field :lname %>
  <br />
    <% if current_agent %>
      <% if not current_agent.isAdmin %>
        <%= f.label :old_password, "Old Password: "%>
	    <%= f.password_field :old_password %>
        <br />
      <% else %>
        <%= f.label :isAdmin, "Promote to admin: " %>
        <%= f.check_box :isAdmin %>
        <br />
      <% end %>
    <% end %>
	<%= f.label :password, "New Password: "%>
	<%= f.password_field :password %>
  <br />
	<%= f.label :password_confirmation, "Confirm New Password: "%>
	<%= f.password_field :password_confirmation %>
  <br />
    <%= f.submit "Save", class: "submit" %>
<% end %>