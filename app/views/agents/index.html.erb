<h2>Listing agents</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
	  <th>Username</th>
	  <% if current_agent and current_agent.isAdmin %>
      <th></th>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @agents.each do |agent| %>
      <tr>
        <td><%= link_to "#{agent.fname} #{agent.lname}", agent %></td>
		<td><%= agent.username %></td>
		<% if current_agent and current_agent.isAdmin %>
        <td><%= link_to 'Edit', edit_agent_path(agent) %></td>
        <td><%= link_to 'Delete', agent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

