<br />
  <%= f.label :rental_amount, "Rental Amount: " %>
  <%= f.text_field :rental_amount %>
<br />
  <%= f.label :move_in, "Move in date:" %>
  <%= f.date_select :move_in, :include_blank => true %>
<br />
  <%= f.label :move_out, "Move out date: " %>
  <%= f.text_field :move_out, :include_blank => true %>
<br />
  <%= f.label :date, "Date: " %>
  <%= f.text_field :date, :include_blank => true %>
<br />
  <%= f.label :thank_you_sent, "Thank you sent: " %>
  <%= f.check_box :thank_you_sent %>
<br />
  <%= f.label :referral_amount, "Referral Amount: " %>
  <%= f.text_field :referral_amount %>
<br />
  <%= f.label :comments %>
  <%= f.text_area :comments %>
<br />
<button id="leases_client_filter_button" type='button'>Filter by Client</button>
<div class="subfields" id="leases_client_filter">
Client filter: <br />
	<%= f.fields_for :client do |cl| %>
	  <%= render :partial => '/clients/search_fields', :locals => { :f => cl } %>
	<% end %>
</div>
<br />
<button id="leases_agent_filter_button" type='button'>Filter by Agent</button>
<div class="subfields" id="leases_agent_filter">
Agent filter: <br />
  <%= f.fields_for :agent do |ag| %>
    <%= render :partial => '/agents/search_fields', :locals => { :f => ag } %>
  <% end %>
</div>
<br />
<button id="leases_property_filter_button" type='button'>Filter by Property</button>
<div class="subfields" id="leases_property_filter">
Property filter: <br />
  <%= f.fields_for :room do |pr| %>
 	<%= render :partial => '/room/search_fields', :locals => { :f => pr } %>
  <% end %>
</div>
<script>
$('#leases_client_filter_button').click(function() {
	$('#leases_client_filter').slideToggle()
})
$('#leases_property_filter_button').click(function() {
	$('#leases_property_filter').slideToggle()
})
$('#leases_agent_filter_button').click(function() {
	$('#leases_property_filter').slideToggle()
})
</script>