<%= f.label :company, "Company: " %>
<%= f.text_field :company %>
<br />
<%= f.label :date_received, "Date Received: " %>
<%= f.date_select :date_received, :include_blank => true %>
<br />
<%= f.label :confirmed, "Confirmed: " %>
<%= f.check_box :confirmed %>
<br />
<%= f.label :file_number, "File Number: " %>
<%= f.text_field :file_number %>
<br />
<%= f.label :source, "Source: " %>
<%= f.text_field :source %>
<br />
<button id="clients_contact_filter_button" type='button'>Filter by Contact</button>
<div class="subfields" id="clients_contact_filter">
Contact filter: <br />
<%= f.fields_for :individual do |ind| %>
	<%= render :partial => '/individuals/fields', :locals => { :f => ind } %>
<% end %>
</div>

<script>
$('#clients_contact_filter_button').click(function() {
	$('#clients_contact_filter').slideToggle()
})
</script>