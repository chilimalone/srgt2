<p id="notice"><%= notice %></p>

<p>
  <strong>Contact:</strong>
  <% if @tenant.individual %>
  <%= link_to "#{@tenant.individual.name}", @tenant.individual %>
  <% end %>
</p>

<p>
  <strong>Leased signed:</strong>
  <%= @tenant.leased_signed %>
</p>

<p>
  <strong>Lease expired:</strong>
  <%= @tenant.lease_expired %>
</p>

<p>
  <strong>Property:</strong>
  <% if @tenant.property %>
  <%= link_to "#{@tenant.property.address}", property_path(@tenant.property) %>
  <% end %>
</p>

<p>
  <strong>Room:</strong>
  <% if @tenant.room %>
  <%= link_to "#{@tenant.room.room_number}", property_path(@tenant.room) %>
  <% end %>
</p>

